<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_pet_sitter_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.b10715.final_pj.PetSitterInfoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <!-- 펫시터 이미지 -->
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_pet_sitter"
                    android:layout_width="125.0dip"
                    android:layout_height="125.0dip"
                    android:src="@drawable/ic_action_user"
                    app:border_color="#FF000000" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- 펫시터 이름 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="이름" />

                    <TextView
                        android:id="@+id/sitter_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 나이,성별 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_age"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="나이" />

                    <TextView
                        android:id="@+id/sitter_age"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp" />

                    <TextView
                        android:id="@+id/txt_sitter_sex"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="성별" />

                    <TextView
                        android:id="@+id/sitter_sex"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <!-- 펫시터 지역 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_adr"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="지역" />

                    <TextView
                        android:id="@+id/sitter_adr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 양육 경력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_career"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="펫 양육 경력" />

                    <TextView
                        android:id="@+id/sitter_career"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 반려동물 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_pet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="현재 양육중인 반려동물" />

                    <TextView
                        android:id="@+id/sitter_pet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 시간 당 가격 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="펫시팅 비용" />

                    <TextView
                        android:id="@+id/sitter_price"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 한마디 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="한마디" />

                    <TextView
                        android:id="@+id/sitter_word"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 펫시터 예약된 펫 시팅 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_sitter_regist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번달 예약된 펫 시팅" />

                    <EditText
                        android:id="@+id/edit_sitter_regist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 예약하기 버튼 -->
                <Button
                    android:id="@+id/btn_reserve"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@xml/btn_border"
                    android:onClick="OnClick"
                    android:padding="10dp"
                    android:text="예약하기" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>


